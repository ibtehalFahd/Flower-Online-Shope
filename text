<script>

// Get the modal
var modal = document.getElementById('id01');

function showModel(){
	document.getElementById('id01').style.display='block';	
    var cart=document.getElementById("cartBody");
    var items=selectedItem();
    var item=items[0].split(",");
    
    for(i=0;i<=items.length;i++){
        var item=items[i].split(",");
        var tr=document.createElement("tr");
        tr.setAttribute("id",item[0]+"tr")
        cart.appendChild(tr);
        var id=document.createElement("td");
            id.innerText=i+1;
            tr.appendChild(id);
       
            
        for(n=1;n<=item.length;n++){
            
            var td=document.createElement("td");
            if(n==1){
               td.innerHTML="<img src="+ item[n]+" style='width:80px;height: 80px;'></img";
            }
            else if(n==3){
              td.innerText=item[n];
              td.setAttribute("id",item[0]+"price")

            }
            else{
                td.innerText=item[n];
               
            }
            tr.appendChild(td);
        }
        //var id=item[0];
        // //alert(id);
        var q=document.createElement("td");
            td.innerHTML='<input type="number" id="'+item[0]+'quan" value="1" style="width:40px;" oninput="total(this);"/>';
            tr.appendChild(q);
        var subTotal=document.createElement("td");
        subTotal.setAttribute("id",item[0]+"total")
        tr.appendChild(subTotal);
        var remove=document.createElement("td");
            // total.innerHTML='<button id='+item[0]+' onclick="removeItem('+id+');">X</button>';
            remove.innerHTML='<button id='+item[0]+' onclick="removeItem(this.id);">X</button>';
            tr.appendChild(remove);
    }

	

}
function removeItem(item){
    //alert(item.id);
    var cart=document.getElementById("cartBody");
    cart.removeChild(document.getElementById(item+"tr"));
    localStorage.removeItem(item);
    
    }
function total(item){
 // alert(item.id.split("quan")[0]);
  var to=document.getElementById(item.id.split("quan")[0]+"total");
  var pr=parseInt(document.getElementById(item.id.split("quan")[0]+"price").innerText);
  to.innerText=item.value*pr;
}
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

<script>
    var prevScrollpos = window.pageYOffset;
    window.onscroll = function() {
    var currentScrollPos = window.pageYOffset;
      if (prevScrollpos > currentScrollPos) {
        document.getElementById("navbar").style.top = "0";
      } else {
        document.getElementById("navbar").style.top = "-50px";
      }
      prevScrollpos = currentScrollPos;
    }
    </script>
	
		
